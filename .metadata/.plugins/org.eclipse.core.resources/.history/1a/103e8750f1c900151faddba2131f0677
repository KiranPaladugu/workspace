package com.pack.test;

import java.util.LinkedList;
import java.util.Queue;

public class BlockingQueue<T> {

    private Queue<T> queue = new LinkedList<T>();
    private int capacity;

    public BlockingQueue(int capacity) {
        this.capacity = capacity;
    }

    public synchronized void put(T element) throws InterruptedException {
        while(queue.size() == capacity) {
            System.out.println("Queue is Full : Block others until queue is available");
            wait();
        }

        queue.add(element);
        System.out.println("Queue is Available : notify others until queue is available");
        notify(); // notifyAll() for multiple producer/consumer threads
    }

    public synchronized T take() throws InterruptedException {
        while(queue.isEmpty()) {
            System.out.println("Queue is Empty : Block others until queue is available");
            wait();
        }

        T item = queue.remove();
        System.out.println("Queue is avilable : notify others until queue is available");
        notify(); // notifyAll() for multiple producer/consumer threads
        return item;
    }
}